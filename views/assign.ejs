<!DOCTYPE html>
    <head>
        <meta charset="utf-8">
        <title>Quem sou eu?</title>
        <meta name="description" content="">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/1.11.8/semantic.min.css"/>
        <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/1.11.8/semantic.min.js"></script>
        <script src="https://js.pusher.com/7.0/pusher.min.js"></script>
        <script>
            // Enable pusher logging - don't include this in production
            Pusher.logToConsole = true;

            var pusher = new Pusher('4dfc8e740701093d5b8e', {
            cluster: 'us2'
            });
            channel.bind('restart', function(data) {
                document.body.innerHTML += '<form id="restart" action="/restart" method="post"><input type="hidden" name="roomCode" value='+ data.roomCode +'></form>';
                document.getElementById("restart").submit();
            });
        </script>
    </head>
    <body style="background-color:white">
        <div class="ui centered grid container">
            <div class="row"></div>
            <div class="row"></div>
            <div class="row">
                <div class="eight wide centered column">
                    <div class="ui attached blue message">
                        <h1 class="ui header">Quem Sou Eu?</h1>
                        <p>Quem <%=matchPlayer.name%> vai ser?</p>
                    </div>
                    <form action="/assign" method="post" class="ui attached segment form">
                        <div class="field">
                            <label for="matchIdentity">Identidade Secreta</label>
                            <input type="text" name="matchIdentity" placeholder="Pabllo Vittar">
                        </div>
                        <button class="ui green button" type="submit">Confirmar</button>
                    </form>
                    <%if(VIP){%>
                        <form action="/restart" method="post" class="ui inline form">
                            <button class="ui red button" type="submit">Reiniciar</button>
                        </form>
                    <%}%>
                </div>
            </div>
        </div>
    </body>
</html>