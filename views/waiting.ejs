<!DOCTYPE html>
    <head>
        <meta charset="utf-8">
        <title>Hello World</title>
        <meta name="description" content="">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/1.11.8/semantic.min.css"/>
        <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/1.11.8/semantic.min.js"></script>
    </head>
    <body style="background-color:white">
        <div class="ui centered grid container">
            <div class="row"></div>
            <div class="row"></div>
            <div class="row">
                <div class="eight wide centered column">
                    <div class="ui attached blue message">
                        <h1 class="ui header">Quem Sou Eu?</h1>
                        <% if (justEntered){ %>
                            <p><%= playerName %>, bem-vindo à sala <%= gameCode %></p>
                        <% } else { %>
                            <p>Waiting for more players...</p>
                        <% } %>
                    </div>
                    <div class="ui middle aligned divided list">
                        <% for (var i in gameRooms[0].players){ %>
                            <div class="item">
                                <img class="ui avatar image" src="https://semantic-ui.com/images/avatar/large/elliot.jpg">
                                <div class="content">
                                    <p class="header">
                                        <%= gameRooms[0].players[i].name %>
                                    </p>
                                </div>
                            </div>
                        <% } %>
                    </div>
                    <form action="/play" method="get" class="ui inline form">
                        <button class="ui blue button" type="submit">Jogar!</button>
                        <input style="visibility:hidden" type="text" name="playerName" value= <%= playerName %> >
                    </form>
                    <!-- temporary button to start game, should in /new-game -->
                    <form action="/start" method="post" class="ui inline form">
                        <button class="ui green button" type="submit">Começar!</button>
                        <input style="visibility:hidden" type="text" name="playerName" value= <%= playerName %> >
                    </form>
                </div>
            </div>
        </div>
    </body>
</html>